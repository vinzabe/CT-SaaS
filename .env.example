# CT-SaaS Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=7842
ENVIRONMENT=development  # development | production

# Database (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5433/ct_saas?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6380

# JWT Configuration (REQUIRED in production)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secure-secret-here
JWT_ACCESS_EXPIRY=15   # minutes
JWT_REFRESH_EXPIRY=7   # days

# Demo Accounts (Optional - for development/demo purposes)
# In production, set these or demo accounts will be disabled
DEMO_ADMIN_EMAIL=admin@ct.saas
DEMO_ADMIN_PASSWORD=
DEMO_USER_EMAIL=demo@ct.saas
DEMO_USER_PASSWORD=

# Torrent Engine
DOWNLOAD_DIR=./downloads
MAX_CONCURRENT=10
TORRENT_PORT=42069

# Stripe (Optional - for paid features)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_KEY=

# Storage (local or s3)
STORAGE_TYPE=local
S3_BUCKET=
S3_REGION=us-east-1
